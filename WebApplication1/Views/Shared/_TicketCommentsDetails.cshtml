@model WebApplication1.Models.TicketComment

<div class="container animated fadeInRight">
    <div class="row">
        <div class="col-sm-1">
            <div class="thumbnail">
                <img class="img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
            </div><!-- /thumbnail -->
        </div><!-- /col-sm-1 -->

        <div class="col-sm-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>@Model.User.Email</strong> <span class="text-muted">commented 5 days ago</span>
                </div>
                <div class="panel-body">
                    @Model.Comment
                </div><!-- /panel-body -->
                    @if (User.IsInRole("Administrator"))
                    {
                        @Html.ActionLink("    Edit    ", "Edit", "TicketComments", new { id = Model.Id }, null)
                        @Html.ActionLink("    Delete  ", "Delete", "TicketComments", new { id = Model.Id }, null)
                    }
            </div><!-- /panel panel-default -->
        </div><!-- /col-sm-5 -->
    </div><!-- /row -->
</div><!-- /container -->

       

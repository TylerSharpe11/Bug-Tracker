@model WebApplication1.Models.TicketAttachment

<div class="animated zoomInRight">
    <h4>TicketAttachment</h4>
    <hr/>
    @if (Path.GetExtension(Model.FileUrl).ToLower() == ".jpg"
            || Path.GetExtension(Model.FileUrl).ToLower() == ".png"
            || Path.GetExtension(Model.FileUrl).ToLower() == ".gif"
            || Path.GetExtension(Model.FileUrl).ToLower() == ".jpeg")
    {
        <img src="@Url.Content(Model.FileUrl)" class="pull-right" width="200px" />
    }
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Ticket.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ticket.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FilePath)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FilePath)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FileUrl)
        </dt>

        <dd>
            <a href="@Model.FileUrl">@Model.FileUrl</a>
        </dd>
        
    </dl>
    
    @if (User.IsInRole("Administrator"))
    {
        @Html.ActionLink("    Edit    ", "Create", "TicketAttachments", new { TicketId = Model.Id }, null)
        @Html.ActionLink("    Delete  ", "Delete", "TicketAttachments", new { TicketId = Model.Id }, null)
    }
</div>

